using cxx

hxx{*}: extension =
ixx{*}: extension = ixx
txx{*}: extension = txx
cxx{*}: extension = cxx

cxx.std = 14
cxx.poptions += -I$src_root

# All exe{} in tests/ are, well, tests. Don't install them.
#
tests/: test.exe = true
tests/: install = false
