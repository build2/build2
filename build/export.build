if ($import.target == exe{b})
{
  $out_root/
  {
    include b/
  }

  export $out_root/b/exe{b}
}
else
{
  $out_root/
  {
    include libbuild2/
  }

  d = [dir_path] $out_root/libbuild2/
  if ($name($import.target) != 'build2')
  {
    # Assume one of the modules.
    #
    d += $regex.replace($name($import.target), '^build2-(.+)', '\1')
  }

  export $d/$import.target
}
