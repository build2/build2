            1
            2
            3
            EOO
          }

          : false
          :
          {
            $c <"$false 1 || $true 2 && $false 3" && $bf >>EOO != 0
            1
            2
            3
            EOO
          }
        }
      }

      : false
      :
      {
        : TERM
        :
        $c <"$false 1 || $false 2" && $bf >>EOO != 0
        1
        2
        EOO

        : OR
        :
        {
          : true
          :
          {
            $c <"$false 1 || $false 2 || $true 3" && $b >>EOO
            1
            2
            3
            EOO
          }

