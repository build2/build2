        {{
          : true
          :
          {
            $c <<"EOI" && $b >>EOO
            testscript.syntax = 2

            $true 1 || $true 2 || $true 3
            EOI
            1
            EOO
          }

          : false
          :
          {
            $c <<"EOI" && $b >>EOO
            testscript.syntax = 2

            $true 1 || $true 2 || $false 3
            EOI
            1
            EOO
          }
        }}

        : AND
        :
        {{
          : true
          :
          {
            $c <<"EOI" && $b >>EOO
            testscript.syntax = 2

            $true 1 || $true 2 && $true 3
            EOI
            1
            3
            EOO
          }

          : false
          :
          {
            $c <<"EOI" && $bf >>EOO != 0
            testscript.syntax = 2

            $true 1 || $true 2 && $false 3
            EOI
