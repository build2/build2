testscript.syntax = 2

.include ../common.testscript

: basics
:
$c <<EOI && $b >>EOO
  testscript.syntax = 2

  while ($v != "aa")
  {
    echo "$v" >|
    v = "$(v)a"
  }
  EOI

  a
  EOO

: syntax-1
:
{{
  : basics
  :
  $c <<EOI && $b >>EOO
    while ($v != "aa")
      echo "$v" >|
      v = "$(v)a"
    end
    EOI

    a
    EOO
}}
