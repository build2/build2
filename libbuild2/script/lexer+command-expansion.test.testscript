  'a b'
  EOO

  : in-alias
  :
  $* <:"0<a b" >>EOO
  '0'
  <
  'a b'
  EOO

  : out
  :
  $* <:"1>=a b" >>EOO
  '1'
  >=
  'a b'
  EOO

 : out-alias
  :
  $* <:"1>a b" >>EOO
  '1'
  >
  'a b'
  EOO

  : out-app
