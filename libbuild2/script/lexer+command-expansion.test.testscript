test.arguments = command-expansion

: pass-redirect
:
{
  : in
  :
  $* <:"0<|" >>EOO
  '0'
  <|
  EOO

  : arg-in
  :
  $* <:"0 <|" >>EOO
  '0 '
  <|
  EOO

  : out
  :
  $* <:"1>|" >>EOO
  '1'
  >|
  EOO

  : arg-out
  :
  $* <:"1 >|" >>EOO
  '1 '
  >|
  EOO
}

: null-redirect
:
{
  : in
  :
  $* <:"0<-" >>EOO
  '0'
  <-
  EOO

  : arg-in
  :
  $* <:"0 <-" >>EOO
  '0 '
  <-
  EOO

  : out
  :
  $* <:"1>-" >>EOO
  '1'
  >-
  EOO

  : arg-out
  :
  $* <:"1 >-" >>EOO
  '1 '
  >-
  EOO
}

: trace-redirect
:
{
  : out
  :
  $* <:"1>!" >>EOO
  '1'
  >!
  EOO

  : arg-out
  :
  $* <:"1 >!" >>EOO
  '1 '
  >!
  EOO
}

: merge-redirect
:
{
  : out
  :
  $* <:"1>&2" >>EOO
  '1'
  >&
  '2'
  EOO

  : arg-out
  :
  $* <:"1 >&2" >>EOO
  '1 '
  >&
  '2'
  EOO
}

: str-redirect
:
{
  : in
  :
  {
    : newline
    :
    $* <:"0<<<=a b" >>EOO
    '0'
    <<<=
    'a b'
    EOO

    : no-newline
    :
    $* <:"0<<<=:a b" >>EOO
    '0'
    <<<=:
    'a b'
    EOO
  }

  : in-alias
  :
  {
    : newline
    :
    $* <:"0<<<a b" >>EOO
    '0'
    <<<
    'a b'
    EOO

    : no-newline
    :
    $* <:"0<<<:a b" >>EOO
    '0'
    <<<:
    'a b'
    EOO
  }

  : out
  :
  {
    : newline
    :
    $* <:"1>>>?a b" >>EOO
    '1'
    >>>?
    'a b'
    EOO

    : no-newline
    :
    $* <:"1>>>?:a b" >>EOO
    '1'
    >>>?:
    'a b'
    EOO
  }
}

