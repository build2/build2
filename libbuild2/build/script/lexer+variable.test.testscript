# Test handling special variable names ($>, $<).
#

testscript.syntax = 2

test.arguments = variable

: primary-target
:
{{
  : only
  :
  $* <">" >>EOO
  '>'
  <newline>
  EOO

  : followed
  :
  $* <">abc" >>EOO
  '>'
  'abc'
  <newline>
  EOO
}}

: prerequisite
:
{{
  : only
  :
  $* <"<" >>EOO
  '<'
  <newline>
  EOO

  : followed
  :
  $* <"<abc" >>EOO
  '<'
  'abc'
  <newline>
  EOO
}}
