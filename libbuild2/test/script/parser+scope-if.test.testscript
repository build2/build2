  {
    cmd
  }
  elif false
  {
    cmd
    cmd
  }
  elif false
  {
    cmd
  }
  elif true
  {
    cmd1
    cmd2
  }
  elif false
  {
    cmd
  }
  else
  {
    cmd
    cmd
  }
