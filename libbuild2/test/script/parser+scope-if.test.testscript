: if
:
{
  : true
  :
  $* -s <<EOI >>EOO
  if true foo
  {
    cmd
  }
  EOI
  {
    ? true foo
    {
      cmd
    }
  }
  EOO

  : false
  :
  $* -s <<EOI >>EOO
  if false foo
  {
    cmd
  }
  EOI
  {
    ? false foo
  }
  EOO

  : not-true
  :
  $* -s <<EOI >>EOO
  if! true
  {
    cmd
  }
  EOI
  {
    ? true
  }
  EOO

  : not-false
  :
  $* -s <<EOI >>EOO
  if! false
  {
    cmd
  }
  EOI
  {
    ? false
    {
      cmd
    }
  }
  EOO

  : eos-inside
  :
  $* <<EOI 2>>EOE != 0
  if
  {
  EOI
  testscript:3:1: error: expected '}' at the end of the scope
  EOE

}

: elif
:
{
  : true
  :
  $* -s <<EOI >>EOO
  if false
  {
    cmd
  }
  elif true
  {
    cmd1
  }
  EOI
  {
    ? false
    ? true
    {
      cmd1
    }
  }
  EOO

  : false
  :
  $* -s <<EOI >>EOO
  if false
  {
    cmd
  }
  elif false
  {
    cmd
  }
  EOI
  {
    ? false
    ? false
  }
  EOO

  : not-false
  :
  $* -s <<EOI >>EOO
  if false
  {
    cmd
  }
  elif! false
  {
    cmd1
  }
  EOI
  {
    ? false
    ? false
    {
      cmd1
    }
  }
  EOO

  : not-true
  :
  $* -s <<EOI >>EOO
  if false
  {
    cmd
  }
  elif! true
  {
    cmd
  }
  EOI
  {
    ? false
    ? true
  }
  EOO

  : after-else
  :
  $* <<EOI 2>>EOE != 0
  if false
  {
    cmd
  }
  else
  {
    cmd
  }
  elif true
  {
    cmd
  }
  EOI
  testscript:9:1: error: 'elif' after 'else'
  EOE
}

